# Environment Variables for OAuth2 Configuration
# Copy this file to .env and fill in your OAuth2 credentials

# Google OAuth2 Credentials
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Facebook OAuth2 Credentials  
# Get these from Facebook Developers: https://developers.facebook.com/
FACEBOOK_CLIENT_ID=your_facebook_client_id_here
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret_here

# OAuth2 Redirect URI (optional - defaults to localhost)
# For production, change to your domain
OAUTH2_REDIRECT_URI=http://localhost:8081/api/v1/auth/oauth2/callback

# Example production values:
# OAUTH2_REDIRECT_URI=https://api.yourdomain.com/api/v1/auth/oauth2/callback
